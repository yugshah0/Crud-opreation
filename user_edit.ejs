<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

      </head>
    <body>
    <div class="container">
        <h2><%= title %></h2><br>
       <form action="/update" method="POST">
           <input type="hidden" value="<%= user.id %>" name="id">
           <div class="form-group">
               <label for="c_id">Course_id:</label>
               <input type="text" class="form-control" id="course_id" value="<%= user.course_id %>"  name="course_id" >
           </div>
           <div class="form-group">
            <label for="c_name">Course Name:</label>
            <input type="text" class="form-control" id="course_name" value="<%= user.course_name %>" name="course_name" >
        </div>
        <div class="form-group">
            <label for="dept_name">Department Name:</label>
            <input type="text" class="form-control"  id="course_name" value="<%= user.department %>" name="department" >
        </div>
        <div class="form-group">
            <label for="ins_name">Institute Name:</label>
            <input type="text" class="form-control" id="course_name" placeholder="" value="<%= user.institute %>" name="institute" >
        </div>
        <div class="form-group">
            <label for="uns_name">University Name:</label>
            <input type="text" class="form-control" id="course_name" placeholder="" value="<%= user.department %>" name="university" >
        </div>
        <button type="submit" class="btn btn-primary"> Submit </button>
    </form>
    </div>
    </body>
</html>
